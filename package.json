{
  "name": "integreat",
  "version": "0.8.0-alpha.0",
  "description": "Node.js integration layer",
  "author": "Kjell-Morten Bratsberg Thorsen <post@kjellmorten.no> (http://kjellmorten.no/)",
  "license": "ISC",
  "keywords": [
    "integreat",
    "integration",
    "data",
    "api"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "test": "NODE_ENV=test nyc --reporter=text-summary ava",
    "test:inspect": "node --inspect node_modules/ava/profile.js",
    "test:watch": "npm run dev",
    "dev": "NODE_ENV=test ava --watch",
    "build": "tsc",
    "prepare": "npm run build",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "nyc:report": "nyc report --reporter=text --reporter=html",
    "lint": "tslint --project tsconfig.json --config tslint.json"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "files": [
      "src/**/*.test.ts",
      "tests/**/*.test.ts"
    ],
    "sources": [
      "./index.js",
      "src/**/!(*.test).ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts",
      ".js"
    ],
    "exclude": [
      "**/*.test.js",
      "**/*.test.ts",
      "tests/helpers/**.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/integreat-io/integreat.git"
  },
  "bugs": {
    "url": "https://github.com/integreat-io/integreat/issues"
  },
  "homepage": "https://github.com/integreat-io/integreat#readme",
  "engines": {
    "node": ">= 8.6",
    "npm": ">= 5.6"
  },
  "dependencies": {
    "@sindresorhus/is": "^1.0.0",
    "@types/later": "^1.2.5",
    "@types/uuid": "^3.4.5",
    "debug": "^4.1.1",
    "got": "^9.6.0",
    "later": "^1.2.0",
    "map-any": "^0.1.2",
    "map-transform": "^0.3.5",
    "ramda": "^0.26.1",
    "uuid": "^3.2.2"
  },
  "devDependencies": {
    "@types/nock": "^10.0.3",
    "@types/sinon": "^7.0.13",
    "ava": "2.1.0",
    "coveralls": "^3.0.4",
    "integreat-adapter-json": "^0.1.5",
    "nock": "^10.0.6",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "sinon": "^7.3.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-security": "^1.16.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.5.2"
  }
}
